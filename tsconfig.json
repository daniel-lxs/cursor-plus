{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2020",
		"outDir": "out",
		"rootDir": "src",
		"moduleResolution": "Node",
		"verbatimModuleSyntax": false
	},
	"include": [
		"src/extension.ts",
		"src/handlers/**/*.ts",
		"src/services/**/*.ts",
		"src/utils/**/*.ts",
		"src/interfaces/**/*.ts",
		"src/webview/**/*.svelte",
		"src/webview/**/*.ts"
	],
	"exclude": ["node_modules", ".vscode-test"]
}
