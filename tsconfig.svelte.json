{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "bundler",
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "out/webview",
        "rootDir": "src/webview",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": false,
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "types": ["vscode-webview"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/webview/**/*.ts", "src/webview/**/*.js", "src/webview/**/*.svelte"],
    "exclude": ["node_modules", ".vscode-test"]
} 