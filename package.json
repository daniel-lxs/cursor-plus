{
  "name": "cursor-plus",
  "displayName": "Cursor Stats",
  "description": "A Cursor extension for monitoring usage.",
  "version": "0.1.0",
  "publisher": "daniel-lxs",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/daniel-lxs/cursor-plus"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "cursor",
    "cursor.com",
    "cursor-ide",
    "statistics",
    "monitoring",
    "usage",
    "analytics"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cursor-plus",
          "title": "Cursor Plus",
          "icon": "$(graph)"
        }
      ]
    },
    "views": {
      "cursor-plus": [
        {
          "type": "webview",
          "id": "cursor-plus.statsView",
          "name": "Cursor Plus"
        }
      ]
    },
    "commands": [
      {
        "command": "cursor-plus.updateToken",
        "title": "Cursor Plus: Update Session Token"
      },
      {
        "command": "cursor-plus.showStats",
        "title": "Cursor Plus: Show Statistics Panel",
        "icon": "$(graph)"
      },
      {
        "command": "cursor-plus.refreshStats",
        "title": "Cursor Plus: Refresh Statistics",
        "icon": "$(sync)"
      },
      {
        "command": "cursor-plus.setLimit",
        "title": "Cursor Plus: Set Usage Limit",
        "icon": "$(dollar)"
      },
      {
        "command": "cursor-plus.toggleUsageBasedPricing",
        "title": "Cursor Plus: Toggle Usage-Based Pricing",
        "icon": "$(toggle)"
      },
      {
        "command": "cursor-plus.openSettings",
        "title": "Cursor Plus: Open Settings",
        "icon": "$(gear)"
      }
    ],
    "configuration": [
      {
        "title": "Cursor Plus",
        "properties": {
          "cursorPlus.enableLogging": {
            "type": "boolean",
            "default": false,
            "description": "Enable detailed logging for debugging purposes.",
            "scope": "window"
          },
          "cursorPlus.enableStatusBarColors": {
            "type": "boolean",
            "default": true,
            "description": "Enable colored status bar based on usage percentage.",
            "scope": "window"
          },
          "cursorPlus.enableAlerts": {
            "type": "boolean",
            "default": true,
            "description": "Enable usage alert notifications.",
            "scope": "window"
          },
          "cursorPlus.usageAlertThresholds": {
            "type": "array",
            "default": [
              10,
              30,
              50,
              75,
              90,
              100
            ],
            "description": "Percentage thresholds at which to show usage alerts.",
            "items": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "scope": "window"
          },
          "cursorPlus.refreshInterval": {
            "type": "number",
            "default": 60,
            "minimum": 10,
            "description": "How often to refresh the stats (in seconds). Minimum 10 seconds.",
            "scope": "window"
          },
          "cursorPlus.showTotalRequests": {
            "type": "boolean",
            "default": false,
            "description": "Show total requests (fast requests + usage-based requests) in the status bar.",
            "scope": "window"
          }
        }
      }
    ]
  },
  "scripts": {
    "clean": "rm -rf out/",
    "dev": "npm-run-all --parallel dev:*",
    "dev:extension": "NODE_ENV=development node build/extension.config.js",
    "dev:webview": "NODE_ENV=development node build/webview.config.js",
    "build": "npm run clean && NODE_ENV=production npm-run-all -s build:*",
    "build:extension": "node build/extension.config.js",
    "build:webview": "node build/webview.config.js",
    "vscode:prepublish": "npm run build",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "vsix": "npm run build && mkdir -p bin && vsce package --out bin",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tsconfig/svelte": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.85.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.20.1",
    "esbuild-plugin-alias": "^0.2.1",
    "esbuild-svelte": "^0.8.0",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rollup": "^4.12.0",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-svelte": "^7.1.6",
    "svelte": "^5.19.9",
    "svelte-check": "^3.0.0",
    "svelte-preprocess": "^5.1.3",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-svelte": "^0.475.0",
    "marked": "^15.0.6",
    "semver": "^7.5.4",
    "sql.js": "^1.12.0"
  }
}
